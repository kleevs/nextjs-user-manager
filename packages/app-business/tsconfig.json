{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "sourceMap": false,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "target": "es5",
    "jsx": "react",
    "typeRoots": [
      "./types",
      "node_modules/@types",
      "../node_modules/@types",
      "../../node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "exclude" : [
    "./node_modules",
    "./dist"
  ]
}
